@using StarWarsSPA

@if (isReady)
{
    @ChildContent
}
else
{
    <Loader />
}

@code {
    private bool isReady = false;

    [Parameter] public RenderFragment? ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Simulate loading, e.g., auth check, config fetch, etc.
        await Task.Delay(1500);
        isReady = true;
    }
}
